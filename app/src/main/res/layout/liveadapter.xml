<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cd1"
    android:layout_width="360dp"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="#CCF4F4">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_id"
        android:layout_width="356dp"
        android:layout_height="120dp"
        android:background="#CCF4F4"
        android:paddingLeft="1dp">

        <TextView
            android:id="@+id/runs"
            android:layout_width="342dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:text="@string/textview"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.166" />

        <TextView
            android:id="@+id/batsmenname"
            android:layout_width="331dp"
            android:layout_height="45dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:text="@string/teama"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.266"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/balls"
            android:layout_width="252dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#283593"
            app:layout_constraintBottom_toTopOf="@+id/runs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.166" />

        <TextView
            android:id="@+id/fours"
            android:layout_width="103dp"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="#191818"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/sixex"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="@+id/runs" />

        <TextView
            android:id="@+id/sixex"
            android:layout_width="107dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="#171616"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/batsmenname"
            app:layout_constraintEnd_toEndOf="@+id/batsmenname"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/batsmenname"
            app:layout_constraintTop_toBottomOf="@+id/runs"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/toss"
            android:layout_width="337dp"
            android:layout_height="19dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#070707"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/batsmenname"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="#CC5252"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>